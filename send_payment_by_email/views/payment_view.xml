<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_wizard" model="ir.ui.view">
      <field name="name">account.payment.form.inherit</field>
      <field name="inherit_id" ref="account.view_account_payment_form"/>
      <field name="model">account.payment</field>
      <field name="arch" type="xml">
        <field name="communication" position="after">
          <field name="sent_email"/>
        </field>
      </field>
    </record>

    <record id="view_account_payment_register_wizard" model="ir.ui.view">
      <field name="name">account.payment.register.inherit</field>
      <field name="inherit_id" ref="account.view_account_payment_form_multi"/>
      <field name="model">account.payment.register</field>
      <field name="arch" type="xml">
        <field name="group_payment" position="after">
          <field name="sent_email"/>
        </field>
      </field>
    </record>
</odoo>
