<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">

    <!--Email template -->
    <record id="mail_template_data_payment_receipt_send_with_invoice" model="mail.template">
        <field name="name">Payment Receipt: Send by email with invoice info</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="subject">{{object.company_id.name}} Payment Receipt (Ref {{object.name or 'n/a' }})</field>
        <field name="partner_to">{{object.partner_id.id}}</field>
        <field name="body_html" type="xml">
<div style="margin: 0px; padding: 0px;">
<p style="margin: 0px; padding: 0px; font-size: 13px;">
    Dear <t t-out="object.partner_id.name or ''"/><br/><br/>
    Thank you for your payment.
    Here is your payment receipt <strong t-out="(object.name or '').replace('/','-')"/> amounting
    to <strong t-out="format_amount(object.amount, object.currency_id)"/> from <t t-out="object.company_id.name"/>.
    <br /><br />
    <table border="0" cellpadding="0" cellspacing="0" width="750" style="padding: 8px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; border-collapse:separate;">
        <tbody>
            <tr style="font-weight: bold; margin-bottom:10px;">
                <td><span>Invoice Date</span></td>
                <td><span>Invoice Number</span></td>
                <td><span>Reference</span></td>
                <td style="text-align:right;"><span>Original Amount</span></td>
                <td style="text-align:right;"><span>Amount Paid</span></td>
                <td style="text-align:right;"><span>Balance</span></td>
            </tr>
            <tr t-foreach="object.invoice_ids" t-as="inv">
                <td><span t-out="inv.date_invoice"/></td>
                <td><span t-out="inv.name"/></td>
                <td><span t-out="inv.ref"/></td>
                <td style="text-align:right;"><span t-out="inv.currency_id.symbol"/> <span t-out="inv.amount_total"/></td>
                <td style="text-align:right;"><span t-out="object.currency_id.symbol"/> <span t-out="object.amount"/></td>
                <td style="text-align:right;"><span t-out="inv.currency_id.symbol"/> <span t-out="inv.residual"/></td>
            </tr>
        </tbody>
    </table>
    <br /><br />
    Do not hesitate to contact us if you have any questions.
    <br/><br/>
    Best regards,<br/>
    <div t-if="user.signature">
        <t t-out="user.signature or ''"><br/></t>
    </div>
</p>
</div>
</field>
        <field name="report_template" ref="account.action_report_payment_receipt"/>
        <field name="report_name">{{(object.name or '').replace('/','-')}}</field>
        <field name="lang">{{object.partner_id.lang}}</field>
        <field name="auto_delete" eval="True"/>
        <field name="user_signature" eval="False"/>
    </record>
</odoo>
